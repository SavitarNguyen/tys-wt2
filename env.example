# ----------------------------------------
# Refiner settings
# ----------------------------------------

# AI Provider options: openai, gemini, mock
# Gemini is now the default (free tier)
REFINER=gemini

# Mock refiner. Use it for tests when AI APIs are unavailable or you don't need them.
# REFINER=mock

# OpenAI API key. Take it from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-xxx

# OpenAI base path. You can change the path if you intend to use one of
# the drop-in replacements for OpenAI API.
OPENAI_BASE_PATH=https://api.openai.com/v1

# OpenAI model. You can try "gpt-4" to better performance, but 20x more expensive.
# See https://platform.openai.com/docs/models/overview for more options.
OPENAI_MODEL=gpt-3.5-turbo

# Gemini API key. Get it from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyDdat3M7C2qZz_4LYHSOXYthm5TGjy3n7k

# Gemini model. Options: gemini-2.5-flash (fast, free tier), gemini-2.5-pro (better quality)
GEMINI_MODEL=gemini-2.5-flash

# Turn on or off auto-refinement. If true, Refiner will automatically refine
# the text.
NEXT_PUBLIC_AUTO_REFINE=false
NEXT_PUBLIC_AUTO_REFINE_DELAY_MS=2000

# Show "Support Ukraine" banner. If true, the banner will be shown.
SHOW_SUPPORT_UKRAINE_BANNER=false


# ----------------------------------------
# Mixpanel settings
# ----------------------------------------
MIXPANEL_ENABLED=true
MIXPANEL_TOKEN=1234567890
MIXPANEL_HOST=api.mixpanel.com
